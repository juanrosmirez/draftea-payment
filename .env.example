# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=payment_system
DB_USER=postgres
DB_PASSWORD=postgres123
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=payment-events
KAFKA_CONSUMER_GROUP=payment-service
KAFKA_BATCH_SIZE=100
KAFKA_BATCH_TIMEOUT=10ms

# Gateway Configuration
GATEWAY_PROVIDER=stripe
GATEWAY_BASE_URL=https://api.stripe.com
GATEWAY_API_KEY=sk_test_your_stripe_key_here
GATEWAY_TIMEOUT=30s
GATEWAY_MAX_RETRIES=3
GATEWAY_CB_MAX_FAILURES=5
GATEWAY_CB_RESET_TIMEOUT=60s

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9091
METRICS_PATH=/metrics
METRICS_ALERT_CHECK_INTERVAL=30s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT_PATH=stdout

# Environment
ENVIRONMENT=development
